{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "app/**.ts"
  ],
  "exclude": [
    "node_modules/@angular/**.ts",
    "**/*.spec.ts"
  ]
}